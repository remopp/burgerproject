<%- include('../partials/header.ejs') %>

<div class="burger-details-container">
    <h1>Customize Your Burger</h1>
    
    <table>
        <thead>
            <tr>
                <th>Ingredient Name</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (ingredients && ingredients.length > 0) { %>
                <% ingredients.forEach(function(ingredient) { %>
                <tr>
                    <td><%= ingredient.ingredient_name %></td>
                    <td>$<%= ingredient.price %></td>
                    <td>
                        <!-- Button to remove ingredient -->
                        <form method="POST" action="/orders/custom/<%= burgerID %>/remove/<%= ingredient.ingredient_id %>">
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No ingredients found for this burger</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Button to complete the burger and add to order -->
    <form method="POST" action="/orders/custom/<%= burgerID %>/complete">
        <input type="hidden" name="totalPrice" value="<%= totalPrice %>"> <!-- Add logic to calculate totalPrice -->
        <button type="submit">Complete Order</button>
    </form>
</div>

<%- include('../partials/footer.ejs') %>
