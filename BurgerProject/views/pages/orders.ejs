<%- include('../partials/header.ejs') %>

<div class="orders-container">
    <h1>Available Burgers</h1>
    <table>
        <thead>
            <tr>
                <th>Burger Name</th>
                <th>Price</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            <% if (burgers && burgers.length > 0) { %> <!-- Ensure this checks for length -->
                <% burgers.forEach(function(burger) { %> <!-- Correct iteration syntax -->
                <tr>
                    <td><%= burger.burger_name %></td> <!-- Access the burger name -->
                    <td>$<%= burger.burger_price %></td> <!-- Access the burger price -->
                    <td>
                        <!-- Form to select the burger (will POST to /orders/:id/select) -->
                        <form method="POST" action="/orders/<%= burger.burger_id %>/select">
                            <button type="submit">Select</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No burgers available</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer.ejs') %>
