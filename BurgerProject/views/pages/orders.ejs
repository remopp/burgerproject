<%- include('../partials/header.ejs') %>

<h1>Choose a Burger</h1>
<table>
    <thead>
        <tr>
            <th>Burger Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% if (burgers && burgers.length > 0) { %>
            <% burgers.forEach(burger => { %>
            <tr>
                <td><%= burger.burger_name %></td>
                <td>$<%= burger.burger_price %></td>
                <td><a href="/orders/<%= burger.burger_id %>"><button>Choose</button></a></td>
            </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3">No burgers available</td>
            </tr>
        <% } %>
    </tbody>
</table>

<%- include('../partials/footer.ejs') %>